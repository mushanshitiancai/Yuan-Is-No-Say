<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuan.yuanisnosay.confessandprofile.PersonalProfileActivity" >

    <RelativeLayout android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#CCCCFF" >
        <TextView android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="20sp"/>
        <Button android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确定"
            android:enabled="false"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/txt_nickname_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/menu_container"
        android:text="昵称:"
        android:textSize="@dimen/picture_album_item_title_height" />

    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_nickname_tag"
        android:layout_below="@id/menu_container"
        android:hint="请输入昵称"
        android:ems="10"
        android:maxLength="24" >
        <requestFocus />
    </EditText>

  	 <TextView
        android:id="@+id/txt_head_pic_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nickname_tag"
        android:text="头像:"
        android:textSize="@dimen/picture_album_item_title_height" />
  	 
  	 <GridView 
        android:id="@+id/img_show_thumbnail"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/txt_head_pic_tag"
        android:layout_marginLeft="5dp"
        android:horizontalSpacing="3dp"        
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp" >
    </GridView>
  	 
</RelativeLayout>
